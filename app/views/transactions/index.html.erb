<%# Bar with the links for filtering the search %>
<div class="w-full h-16 bg-slate-100 p-3">
  <form action="#">
    <div class="flex justify-evenly items-center h-full">
      <div>
        <label for="role-names">Transaction Role:</label>
        <select name="role-names" id="role-names" class="rounded">
          <option value="all-roles">All</option>
          <option value="user-role">As User</option>
          <option value="host-role">As Host</option>
        </select>
      </div>
      <div>
        <label for="transaction-status">Transaction Status:</label>
        <select name="transaction-status" id="transaction-status" class="rounded">
          <option value="trans-all">All</option>
          <option value="trans-scheduled">Scheduled</option>
          <option value="trans-in-progress">In Progress</option>
          <option value="trans-completed">Completed</option>
         </select>
      </div>
      <div>
        <input type="submit" value="Filter Transactions" class="p-2 rounded-md bg-blue-200 hover:bg-teal-200">
      </div>
    </div>

  </form>
</div>

