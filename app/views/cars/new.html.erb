  <div class="bg-gray-100 flex rounded-2xl shadow-lg max-w-3xl p-5 items-center justify-center w-max mx-auto my-10">
    <div class="w-1/2 mr-6 p-5">
      <h1 class="font-bold text-xl">Create Car Listing</h1>

      <%= simple_form_for @car do |form| %>
        <!-- [...] -->
        <div class="flex flex-col my-2">
          <%= form.label :model, class: 'font-bold text-left font-serif' %>
          <%= form.text_field :model, class: 'p-2 mt-8 rounded-xl border' %>
        </div>

        <div class="flex flex-col my-2">
          <%= form.label :price, class: 'font-bold text-left font-serif' %>
          <%= form.number_field :price, class: 'p-2 mt-8 rounded-xl border' %>
        </div>

        <div class="flex flex-col my-2">
          <%= form.label :description, class: 'font-bold text-left font-serif' %>
          <%= form.text_field :description, class: 'p-2 mt-8 rounded-xl border' %>
        </div>

        <div class="flex flex-col my-2">
          <%= form.label :location, class: 'font-bold text-left font-serif' %>
          <%= form.text_field :location, class: 'p-2 mt-8 rounded-xl border' %>
        </div>

        <div class="flex flex-col mb-5">
          <%= form.input :photos, as: :file, input_html: { multiple: true } %>
        </div>

        <div class="flex flex-col my-2">
          <%= form.submit "Create Car", class: 'bg-blue-500 hover:bg-blue-700 rounded-xl text-white py-2' %>
        </div>
      <% end %>
    </div>

    <div class="w-6/12">
      <img src="https://w0.peakpx.com/wallpaper/1002/811/HD-wallpaper-bugatti-divo-supercar-luxury-paris-city-vehicle-eiffel-tower.jpg" class="rounded-2xl" alt="">
    </div>
  </div>
