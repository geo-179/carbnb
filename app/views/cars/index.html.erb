<div class="bg-cover w-full h-80 bg-no-repeat bg-cover bg-center" style="background-image: url('https://hips.hearstapps.com/hmg-prod/images/2020-porsche-taycan-4s-111-1576001340.jpg')">
  <div class="flex justify-center items-center h-full">
    <h1 class="text-5xl text-white font-serif font-semibold">Rent a Ferrari</h1>
  </div>
</div>

<%# Search results bar %>
<div class="w-full bg-blue-200 h-40 px-14 py-6 flex items-center justify-center">
  <form action="cars" method="get" class="grid grid-cols-3 grid-flow-row gap-6">
    <div>
      <label for="model_search">Keyword:</label>
      <input type="text" name="model_search" id="model_search" class="rounded">
    </div>
    <div>
      <label for="location">Location:</label>
      <select name="location" id="location" class="rounded">
        <option value="Honolulu">Honolulu</option>
        <option value="London">London</option>
        <option value="Los Angeles">Los Angeles</option>
        <option value="Miami">Miami</option>
        <option value="Shanghai">Shanghai</option>
        <option value="Sydney">Sydney</option>
      </select>
    </div>
    <input type="submit" value="Search" class="text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-teal-500 hover:bg-white mt-4 lg:mt-0">
    <div>
      <label for="start-date">Pick-up Date:</label>
      <input type="date" name="start-date" id="start-date" class="rounded">
    </div>
    <div>
      <label for="end-date">Drop-off Date:</label>
      <input type="date" name="end-date" id="end-date" class="rounded">
    </div>
  </form>
</div>




  <% if @cars.length == 0 %>
    <h1 class="text-3xl text-center p-6">No Results Match Your Query</h1>
  <% else %>
    <div class="grid grid-cols-3 grid-flow-row gap-4">
      <% @cars.each do |car| %>
        <div class="max-w-sm rounded shadow-lg mt-6 shadow-xl bg-white w-80 mr-4 ml-4">
          <img class="w-full h-40 rounded-t"  alt="car picture" src="<%= car.image_url %>">
          <div class="flex px-3	py-4 justify-between">
            <div class="font-semibold text-lg w-3/4 font-serif"><%= car.model %></div>
              <div class="flex items-center">
                  <p class="ml-2 text-sm font-bold text-gray-900 dark:text-white">⭐️ <%= car.rating %></p>
              </div>
          </div>

          <div class="flex justify-center">
            <span class="inline-block bg-blue-200 rounded-none px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2 font-serif">$<%= car.price %>/day</span>
            <span class="inline-block bg-blue-200 rounded-none px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2 font-serif"><%= car.location %></span>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
